<div class="AccountPage">
  <div class="AccountPage__title">
    <h1>マイページ</h1>
  </div><br>
  <div class="Account__info">
    <h2>ユーザー情報</h2>
  </div>
  <div class="User_info">
    <table class="detail-table">
      <tbody>
        <tr>
          <th class="detail-item">ニックネーム</th>
          <td class="detail-value"><%= current_user.nickname %></td>
        </tr>
        <tr>
          <th class="detail-item">メールアドレス</th>
          <td class="detail-value"><%= current_user.email %></td>
        </tr>
        <tr>
          <th class="detail-item">お名前(全角)</th>
          <td class="detail-value"><%= current_user.last_name + ' ' + current_user.first_name %></td>
        </tr>
        <tr>
          <th class="detail-item">お名前(カナ)</th>
          <td class="detail-value"><%= current_user.last_name_kana + ' ' + current_user.first_name_kana %></td>
        </tr>
        <tr>
          <th class="detail-item">生年月日</th>
          <td class="detail-value"><%= current_user.birth_date %></td>
        </tr>
        <tr>
          <th class="detail-item">住所(まだ保存機能つけていない)</th>
          <td class="detail-value"><%= current_user.nickname %></td>
        </tr>
    </tbody>
    </table>
    <div class="FormField">
      <div class="FormField__name">
        <label for="nickname">ニックネーム</label>
      </div>
      <div class="FormField__name">
        <%= current_user.nickname %>
      </div>
    </div>

    <div class="FormField">
      <div class="FormField__email">
        <label for="email">メールアドレス</label>
      </div>
      <div class="FormField__email">
        <%= current_user.email %>
      </div>
      <br>
    </div>

    <div class="FormField">
      <div class="FormField__LastName">
        <label for="email">お名前(全角)</label>
      </div>
      <div class="FormField__email">
        <%= current_user.email %>
      </div>
      <br>
    </div>

    <div class="FormField">
      <div class="FormField__email">
        <label for="email">メールアドレス</label>
      </div>
      <div class="FormField__email">
        <%= current_user.email %>
      </div>
      <br>
    </div>

    <div class="FormField">
      <div class="FormField__email">
        <label for="email">メールアドレス</label>
      </div>
      <div class="FormField__email">
        <%= current_user.email %>
      </div>
      <br>
    </div>
    <div>
      <%= link_to "ユーザー情報更新", edit_user_path %>
      <br>
      <br>
    </div>
    <div class="Card__title">
      <h2>カード情報</h2>
    </div>
    <div class="Card_info">
      <% if @card.present? %>
        【カード番号】
        <br>
        <%= "**** **** **** " + @card[:last4] %>
        <br>
        【有効期限】
        <br>
        <%= @card[:exp_month] %> / <%= @card[:exp_year] %>
      <% else %>
        カード情報がありません
      <% end %>
      <div>
        <br>
        <%= link_to "カード情報更新", edit_card_path ,data: {turbo: false} %>
        <br>
      </div>
    </div>
  </div>
    <br>
    <%= link_to "ログアウト", destroy_user_session_path, data: { turbo_method: :delete } %>
    <br>
    <br>
    <%= link_to "商品一覧へ戻る", root_path %>
  </div>
</div>